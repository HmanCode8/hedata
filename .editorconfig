# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件的通用设置
[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 针对 Markdown 文件的配置
[*.md]
max_line_length = off
trim_trailing_whitespace = false
    
# 针对 Vue 文件的特定配置
[*.vue]
indent_size = 2 # 你可以修改为你希望的缩进大小
trim_trailing_whitespace = true # 去除行尾空格
insert_final_newline = true # 文件末尾添加新行